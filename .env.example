# Database (pooled connection for app queries)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/loantrack?schema=public"
# Direct connection for migrations (required for Supabase/pgbouncer setups; same as DATABASE_URL for local dev)
DIRECT_URL="postgresql://postgres:postgres@localhost:5432/loantrack?schema=public"

# JWT
JWT_SECRET="your-jwt-secret-here-change-in-production"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-here-change-in-production"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY_DAYS=7

# Server
PORT=3000
NODE_ENV="development"

# Bcrypt
BCRYPT_ROUNDS=12
